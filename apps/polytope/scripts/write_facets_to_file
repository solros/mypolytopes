sub write_facets_to_file {
	my ($p,$file)=@_;
	
	$tmp=new Polytope<Float>(FACETS=>$p->FACETS);

	open(MYFILE,'>'.$file);
	
	print MYFILE $tmp->FACETS;
	
	close(MYFILE);
}